<%- include('partials/header') -%>

<div id="content">
    <div id="leftBar">
        <div id="leftTop">
            <h1><%= broadType %></h1>
            <div id="leftTop_child">
                <div class="leftTop_child_head"><a href=""><%= broadType %></a></div>
                <div class="leftTop_child_child">
                    <% queryList.forEach(query => { %>
                    <li><a href=""><%= query %></a></li>
                    <% }) %>
                </div>
            </div>
        </div>
        <div id="leftBottom">
            <h1>Filter</h1>
        </div>
    </div>
    <div id="rightBar">
        <div id="rightContent">
            <div id="rightContentHead">
                <h1><%= broadType%> - <%= specificType%> (<%= numberOfRecipes%>)</h1>
            </div>
            <div id="rightContentContent">
                <% recipes.forEach(recipe => { %>
                <div class="rightContentEach">
                    <img src="<%= recipe.image %>" alt="">
                    <div class="rightContentEachTitle">
                        <a href=""><%= recipe.title %></a>
                    </div>
                </div>
                <%}) %>
            </div>
        </div>
    </div>
</div>
</div>
</div>



<%- include('partials/footer') -%>