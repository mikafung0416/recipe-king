<%- include('partials/improveHeader') -%>

<!-- FEATURE -->
<section id="home" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">

            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="home-info">
                    <h1>Eat Daily</h1>
                    <h1>Find Recipes</h1>
                    <h3>Check out thousands of recipes in our website!</h3>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- FEATURE -->
<section id="feature" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title text-center">
                    <h1>Recipes</h1>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <ul class="nav nav-tabs justtify-content-center" role="tablist">
                    <li class="active"><a href="#tab01" aria-controls="tab01" role="tab" data-toggle="tab">Cuisine</a>
                    </li>

                    <li><a href="#tab02" aria-controls="tab02" role="tab" data-toggle="tab">Diet</a></li>

                    <li><a href="#tab03" aria-controls="tab03" role="tab" data-toggle="tab">Type</a></li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab01" role="tabpanel">
                        <!-- <div class="tab-pane-item"> -->
                        <% cuisineList.forEach(query => { %>
                        <div class="col col-6 col-md-3 text-center">
                            <form id="<%= query %>-form" action="/<%=cuisine%>/<%=query%>" method="post">
                                <a class="queryTag"
                                    onclick="document.getElementById('<%=query %>-form').submit()"><%= query %></a>
                                <input type="hidden" name="<%=query%>Name" value="<%=query%>">
                            </form>
                        </div>
                        <% }) %>
                        <!-- </div> -->

                    </div>


                    <div class="tab-pane" id="tab02" role="tabpanel">
                        <div class="tab-pane-item">
                            <% dietList.forEach(query => { %>
                            <div class="col col-6 col-md-3 text-center">
                                <form id="<%= query %>-form" action="/<%=diet%>/<%=query%>" method="post">
                                    <a class="queryTag"
                                        onclick="document.getElementById('<%=query %>-form').submit()"><%= query %></a>
                                    <input type="hidden" name="<%=query%>Name" value="<%=query%>">
                                </form>
                            </div>
                            <% }) %>
                        </div>

                    </div>

                    <div class="tab-pane" id="tab03" role="tabpanel">
                        <div class="tab-pane-item">
                            <% typeList.forEach(query => { %>
                            <div class="col col-6 col-md-3 text-center">
                                <form id="<%= query %>-form" action="/<%=type%>/<%=query%>" method="post">
                                    <a class="queryTag"
                                        onclick="document.getElementById('<%=query %>-form').submit()"><%= query %></a>
                                    <input type="hidden" name="<%=query%>Name" value="<%=query%>">
                                </form>
                            </div>
                            <% }) %>
                        </div>

                    </div>
                </div>

            </div>

            <!-- <div class="col-md-6 col-sm-6">
                   <div class="feature-image">
                        <img src="images/feature-mockup.png" class="img-responsive" alt="Thin Laptop">
                   </div>
              </div> -->

        </div>
    </div>
</section>



<!-- TESTIMONIAL -->
