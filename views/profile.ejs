<%- include('partials/headerSignOut') -%>
<div class="window d-flex justify-content-center">
    <div class="profile-bg">
        <div class="row whole-profile">
            <div class="col-3">
                <div class="profile-left">
                   <span class="profile-pic"></span>
                    <h4><%= username %></h4>
                    <br>
                    <h4><%= email %></h4>
                    <br>
                    <% if (favCui === undefined) { %>
                        <br>
                    <% } else { %>
                        <h6>My Favourite Cuisine:</h6>
                        <h5><%= favCui %></h5>
                        <!-- <a href="http://localhost:4000/Cuisine/<%= favCui %>"><%= favCui %></a> -->
                    <% } %>
                    <br>
                    <% if (diet === undefined) { %>
                        <br>
                    <% } else { %>
                        <h6>My Diet Preference:</h6>
                        <h5><%= diet %></h5>
                        <!-- <a href="http://localhost:4000/<%= diet %>"><%= diet %></a> -->
                    <% } %>
                </div>
            </div>
            <div class="col-9">
                <div class="profile-right">
                    <div class="row">
                        <div class="col-6">
                            <h3>My Recipes</h3>
                            <% if (recipeArr.length === 0) { %>
                                <p>You haven't added any recipes yet!</p>
                                <p>Share your recipes <a href="http://localhost:4000/add-recipe">here</a></p>
                            <% } else { %>
                                <% for (let i = 0; i < recipeArr.length; i++) { %>
                                    <div class="row">
                                        <div class="col-4">
                                            <img src="<%= recipeArr[i]['recipe_image'] %>" alt="<%= recipeArr[i]['recipe_name'] %>" class="added-recipe-photo">
                                        </div>
                                        <div class="col-8 d-flex align-items-center">
                                            <!-- <p><%= recipeArr[i]['recipe_name'] %></p> -->
                                            <form id="<%=recipeArr[i]['recipe_id']%>-form" action="/recipes/<%=recipeArr[i]['recipe_id']%>" method="post">
                                                <a href="#"
                                                    onclick="document.getElementById('<%=recipeArr[i].recipe_id%>-form').submit()"><%= recipeArr[i]['recipe_name'] %>
                                                    <input type="hidden" name="idName" value="<%=recipeArr[i]['recipe_id']%>"></a>
                                            </form>




                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                        <div class="col-6">
                            <h3>
                                My Favourite Recipes
                            </h3>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>